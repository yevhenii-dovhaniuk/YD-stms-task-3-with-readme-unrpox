{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": ["jasmine", "node"]
  },
  "files": ["test.ts", "polyfills.ts"],
  "include": ["**/*.spec.ts", "**/*.d.ts"],
  "paths": {
    "@shared/*": [
      "app/shared/*"
    ],
    "@core/*": [
      "app/core/*"
    ],
    "@state": [
      "app/state/index.ts"
    ],
    "@environment": [
      "environments/environment.ts"
    ]
  }
}
